TIMEZONE=Europe/Bucharest

# Limits
CLIENTS=5000
SOURCES=50
QUEUE_SIZE=1048576
CLIENT_TIMEOUT=30
HEADER_TIMEOUT=15
SOURCE_TIMEOUT=10
BURST_SIZE=65536

# Authentication
SOURCE_PASSWORD=source_secret
RELAY_PASSWORD=relay_secret
ADMIN_USER=admin
ADMIN_PASSWORD=admin_secret

# Server info
HOSTNAME=0.0.0.0
LOCATION=Romania
ADMIN_EMAIL=admin@example.com

# Listen
LISTEN_PORT=8000
LISTEN_IP=0.0.0.0

# Logging
LOGLEVEL=3
LOGDIR=/var/log/icecast

# Webroot (default paths for Icecast-KH)
WEBROOT=/usr/share/icecast2/web
ADMINROOT=/usr/share/icecast2/admin

# Mount
MOUNT_NAME=/stream
