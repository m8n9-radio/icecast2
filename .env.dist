TIMEZONE=Europe/Bucharest

# Limits
CLIENTS=5000
SOURCES=50
THREADPOOL=64
QUEUE_SIZE=1048576
CLIENT_TIMEOUT=30
HEADER_TIMEOUT=15
SOURCE_TIMEOUT=10
BURST_ON_CONNECT=1
BURST_SIZE=65536

# Authentication
SOURCE_PASSWORD=source_secret
RELAY_PASSWORD=relay_secret
ADMIN_USER=admin
ADMIN_PASSWORD=admin_secret

# Server info
HOSTNAME=myicecast.example.com
LOCATION=Romania
ADMIN_EMAIL=admin@example.com

# Listen
LISTEN_PORT=8000
LISTEN_IP=0.0.0.0

# Logging
LOGLEVEL=3
LOGDIR=/var/log/icecast2
ACCESSLOGDIR=/var/log/icecast2

# Webroot
WEBROOT=/usr/share/icecast2/web

# Mount defaults
MOUNT_NAME=/stream
MOUNT_DESC=My Awesome Stream
MOUNT_GENRE=Electronic
MOUNT_BITRATE=320
MOUNT_PUBLIC=1
MOUNT_MAXLISTENERS=0

# Statistics
STATS_ENABLED="true"

# TLS (optional)
TLS_ENABLED="false"
# TLS_CERT=/path/to/cert.pem
# TLS_KEY=/path/to/key.pem
